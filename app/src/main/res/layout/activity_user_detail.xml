<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="username" type="String"/>
        <variable name="avatar" type="String"/>
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_content"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:fitsSystemWindows="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="32dp"
            android:paddingTop="24dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_marginTop="@dimen/space_normal"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                app:imageUrl="@{avatar}"
                android:transitionName="@string/transition_image"
                tools:src="@mipmap/ic_launcher" />

            <TextView
                android:fontFamily="sans-serif-medium"
                tools:text="Coder School"
                android:text="@{username}"
                android:layout_marginTop="4dp"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_small"
                android:layout_marginBottom="@dimen/space_normal"
                android:orientation="horizontal"
                android:padding="@dimen/space_normal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:drawableTop="@drawable/ic_favorite"
                    android:gravity="center"
                    android:text="1280"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/size_normal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:drawableTop="@drawable/ic_dinner"
                    android:gravity="center"
                    android:text="200"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/size_normal" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?selectableItemBackground"
                    android:clickable="true"
                    android:drawableTop="@drawable/ic_group"
                    android:gravity="center"
                    android:text="777"
                    android:textColor="@color/colorSecondaryText"
                    android:textSize="@dimen/size_normal" />
            </LinearLayout>

            <Button
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/colorAccent"
                android:drawableLeft="@drawable/ic_group_add"
                android:elevation="2dp"
                android:text="Follow"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvMeals"
            app:behavior_peekHeight="256dp"
            android:background="@android:color/white"
            app:layout_behavior="@string/bottom_sheet_behavior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.CoordinatorLayout>
</layout>
