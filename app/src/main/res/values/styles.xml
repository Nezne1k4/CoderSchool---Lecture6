<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.MealDetail" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">@color/colorTransparent</item>
        <item name="android:windowSharedElementEnterTransition">@transition/meal_detail_transition</item>
    </style>

    <style name="AppTheme.UserDetail" parent="AppTheme.NoActionBar">
        <item name="android:statusBarColor">@color/colorTransparent</item>
        <item name="colorPrimaryDark">@color/colorTransparent</item>
        <item name="android:windowSharedElementEnterTransition">@transition/user_detail_transition</item>
    </style>

    <style name="TextInfo">
        <item name="android:background">?selectableItemBackground</item>
        <item name="clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_normal</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>
</resources>
